<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_90sdp"
    android:background="@drawable/ic_rectangle__1_">

        <ImageView
            android:id="@+id/img_dr_logo"
            android:layout_width="@dimen/_98sdp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:src="@drawable/image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_toEndOf="@id/img_dr_logo"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_askme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_bold"
                android:text="ask me anything"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_dr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_bold"
                android:text="WITH DR JOHNSON"
                android:textAllCaps="true"
                android:textColor="#444444"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/txt_certified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap"
                android:text="Certified ob/gyn &amp; REI"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_bold"
                android:text="Mon, april 19th 3pm EST/12 PST"
                android:textAllCaps="true"
                android:textColor="#545454"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>


</RelativeLayout>