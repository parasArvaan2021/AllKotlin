<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewUnlock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TxtUnlock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_bold"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:text="unlock premium\nto see medication details"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TxtDesUnlock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/asap"
                android:text="@string/Description"
                android:textColor="#000000"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="@id/TxtUnlock"
                app:layout_constraintStart_toStartOf="@id/TxtUnlock"
                app:layout_constraintTop_toBottomOf="@id/TxtUnlock"
                />

            <TextView
                android:id="@+id/TxtStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/asap"
                android:text="Start with a 7 day free trial!!"
                android:textColor="#545454"
                android:textSize="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/TxtDesUnlock" />

            <LinearLayout
                android:id="@+id/LayoutRoundIage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="3"
                app:layout_constraintTop_toBottomOf="@id/TxtStart">

                <androidx.cardview.widget.CardView
                    android:id="@+id/One"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_13sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_borderrect" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/TxtMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="3 Months"
                            android:textColor="#545454"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/DollerRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="$24.99"
                            android:fontFamily="@font/asap_bold"
                            android:textStyle="bold"
                            android:textColor="#222222"
                            android:textSize="@dimen/_22sdp"
                            app:layout_constraintTop_toBottomOf="@id/TxtMonth"
                            app:layout_constraintStart_toStartOf="@id/TxtMonth"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="save 15%"
                            android:textColor="#facaca"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:fontFamily="@font/asap"
                            app:layout_constraintTop_toBottomOf="@id/DollerRate"
                            app:layout_constraintStart_toStartOf="@+id/DollerRate"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_13sdp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/MainImg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_backgroundrounded"
                            android:scaleType="fitXY"/>

                        <TextView
                            android:id="@+id/TxtMonthly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monthly"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="#545454"
                            android:textStyle="bold"
                            android:fontFamily="@font/asap"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$9.99"
                            android:textColor="#222222"
                            android:textSize="@dimen/_22sdp"
                            android:fontFamily="@font/asap_bold"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/TxtMonthly"
                            app:layout_constraintTop_toBottomOf="@id/TxtMonthly"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:scaleType="fitXY"
                            app:layout_constraintStart_toStartOf="@id/MainImg"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/three"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_borderrect" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       >

                        <TextView
                            android:id="@+id/TxtYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 Year"
                            android:textColor="#545454"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:fontFamily="@font/asap"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="@dimen/_10sdp"/>

                        <TextView
                            android:id="@+id/TxtDoller"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$69.99"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/asap_bold"
                            android:textStyle="bold"
                            android:textColor="#222222"
                            android:textSize="@dimen/_22sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/TxtYear"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="save 40%"
                            android:textColor="#facaca"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:fontFamily="@font/asap"
                            app:layout_constraintTop_toBottomOf="@id/TxtDoller"
                            app:layout_constraintStart_toStartOf="@+id/TxtDoller"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/black"
                android:fontFamily="@font/asap"
                android:padding="@dimen/_10sdp"
                android:text="restore purchase"
                android:textColor="#ffffff"
                android:layout_marginBottom="@dimen/_50sdp"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/LayoutRoundIage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>