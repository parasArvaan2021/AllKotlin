<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:paddingStart="@dimen/_5sdp"
    android:paddingEnd="@dimen/_5sdp"
    android:paddingBottom="@dimen/_10sdp">


    <ImageView
        android:id="@+id/ivFrgFavouriteImage"
        android:layout_width="0dp"
        android:layout_height="@dimen/_70sdp"
        android:scaleType="fitXY"
        android:src="@drawable/nature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFrgFavouriteCatagory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/open_sans_regular"
        android:gravity="start"
        android:text="Patient story"
        android:textColor="#215C6A"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@id/tvFrgFavouriteDescription"
        app:layout_constraintEnd_toStartOf="@id/tvFrgFavouriteDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivFrgFavouriteImage" />

    <TextView
        android:id="@+id/tvFrgFavouriteDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/open_sans_regular"
        android:gravity="end"
        android:text="12th March 21 "
        android:textColor="@color/white"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@id/tvFrgFavouriteDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvFrgFavouriteCatagory"
        app:layout_constraintTop_toBottomOf="@id/ivFrgFavouriteImage" />

    <TextView
        android:id="@+id/tvFrgFavouriteDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Georgia my long Covid"
        android:textColor="@color/white"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toTopOf="@id/tvFrgFavouriteMinute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFrgFavouriteCatagory" />

    <TextView
        android:id="@+id/tvFrgFavouriteMinute"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_regular"
        android:text="30 mins"
        android:textColor="@color/white"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFrgFavouriteDescription" />

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/progressBarFrgFavourite"
        android:layout_width="0dp"
        android:layout_height="@dimen/_3sdp"
        app:layout_constraintBottom_toBottomOf="@id/ivFrgFavouriteImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rcBackgroundColor="@color/white"
        app:rcMax="100"
        app:rcProgress="50"
        app:rcProgressColor="#399DB2"
        app:rcRadius="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>