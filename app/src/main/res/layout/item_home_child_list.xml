<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="@dimen/_120sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_15sdp"
    android:background="@color/black">


    <ImageView
        android:id="@+id/ivFrgHomeImage"
        android:layout_width="0dp"
        android:layout_height="@dimen/_70sdp"
        android:scaleType="fitXY"
        android:src="@drawable/nature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFrgHomeCatagory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/open_sans_regular"
        android:gravity="start"
        android:text="Patient story"
        android:textColor="#215C6A"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@id/tvFrgHomeDescription"
        app:layout_constraintEnd_toStartOf="@id/tvFrgHomeDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivFrgHomeImage" />

    <TextView
        android:id="@+id/tvFrgHomeDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/open_sans_regular"
        android:gravity="end"
        android:text="12th March 21 "
        android:textColor="@color/white"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@id/tvFrgHomeDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvFrgHomeCatagory"
        app:layout_constraintTop_toBottomOf="@id/ivFrgHomeImage" />

    <TextView
        android:id="@+id/tvFrgHomeDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Georgia my long Covid"
        android:textColor="@color/white"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toTopOf="@id/tvFrgHomeMinute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFrgHomeCatagory" />

    <TextView
        android:id="@+id/tvFrgHomeMinute"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_regular"
        android:text="30 mins"
        android:textColor="@color/white"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFrgHomeDescription" />

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/progressBarFrgHome"
        android:layout_width="0dp"
        android:layout_height="@dimen/_3sdp"
        app:layout_constraintBottom_toBottomOf="@id/ivFrgHomeImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rcBackgroundColor="@color/white"
        app:rcMax="100"
        app:rcProgress="50"
        app:rcProgressColor="#399DB2"
        app:rcRadius="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>